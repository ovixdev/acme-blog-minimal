---
// src/pages/about.astro

import BaseLayout from "../layouts/BaseLayout.astro";

// Team members data
// TypeScript: Define a type for team members
interface TeamMember {
  name: string;
  role: string;
  bio: string;
}

const teamMembers: TeamMember[] = [
  {
    name: "Jane Smith",
    role: "CEO & Founder",
    bio: "15 years of experience in tech and marketing leadership.",
  },
  {
    name: "John Doe",
    role: "Head of Content",
    bio: "Former journalist with a passion for storytelling.",
  },
  {
    name: "Sarah Johnson",
    role: "Tech Lead",
    bio: "Full-stack developer and open source contributor.",
  },
];
---

<BaseLayout title="About" description="Learn more about Acme Ltd and our team">
  <h1>About Acme Ltd</h1>

  <section class="mission">
    <h2>Our Mission</h2>
    <p>
      At Acme Ltd, we believe that great technology and smart marketing
      go hand in hand. Our mission is to share practical insights that
      help businesses navigate the digital landscape.
    </p>
  </section>

  <section class="team">
    <h2>Our Team</h2>
    <div class="team-grid">
      {teamMembers.map((member) => (
        <article class="team-member">
          <h3>{member.name}</h3>
          <p class="role">{member.role}</p>
          <p class="bio">{member.bio}</p>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #1a1a2e;
  }

  section {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1a1a2e;
  }

  .mission p {
    font-size: 1.1rem;
    color: #444;
    max-width: 700px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .team-member {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
  }

  .team-member h3 {
    margin-bottom: 0.25rem;
    color: #1a1a2e;
  }

  .role {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .bio {
    color: #444;
    font-size: 0.95rem;
    margin: 0;
  }
</style>