---
// src/pages/index.astro

// Import the layout component
import BaseLayout from "../layouts/BaseLayout.astro";

// Page-specific data
const tagline: string = "Tech & Marketing Insights";
---

<!-- Use the layout and pass props -->
<BaseLayout title="Home" description="Welcome to Acme Ltd Blog - Tech & Marketing Insights">
  <!-- Everything here goes into the <slot /> -->
  <h1>Welcome to Acme Ltd Blog</h1>
  <p>{tagline}</p>

  <section class="intro">
    <p>
      We share insights on technology trends and marketing strategies
      to help your business grow.
    </p>
  </section>
</BaseLayout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1a1a2e;
  }

  h1 + p {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .intro {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid #1a1a2e;
  }

  .intro p {
    margin: 0;
    color: #444;
  }
</style>
