---
// src/pages/index.astro

// TypeScript: Define a type for our page data
interface Props {
  title: string;
}

// Variables (these run at build time)
const companyName: string = "Acme Ltd";
const tagline: string = "Tech & Marketing Insights";
const currentYear: number = new Date().getFullYear();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{companyName} Blog</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">{companyName}</a>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h1>Welcome to {companyName} Blog</h1>
      <p>{tagline}</p>
    </main>

    <footer>
      <p>&copy; {currentYear} {companyName}. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, sans-serif;
    line-height: 1.6;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background: #1a1a2e;
    padding: 1rem 2rem;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    color: #fff;
    font-weight: bold;
    font-size: 1.25rem;
    text-decoration: none;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  nav a {
    color: #e0e0e0;
    text-decoration: none;
  }

  nav a:hover {
    color: #fff;
  }

  main {
    flex: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #1a1a2e;
  }

  footer {
    background: #f5f5f5;
    padding: 2rem;
    text-align: center;
    color: #666;
  }
</style>